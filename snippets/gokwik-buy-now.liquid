
<script>
function handleBuyNow(e) {
  const sizeSelected = document.querySelector('input[name="globo-option-0"]:checked');

  if (!sizeSelected) {
    alert('Please select your size');
    return;
  }

  onBuyNowClick(e);
}
</script>
{% if settings.goBuynowEnable %}           
<button type="button" class="button disabled" disabled onclick="handleBuyNow()" id="gokwik-buy-now"{% if settings.hideFlow %} style="display:none !important;" {% endif %}>
  <div style="display:none" class="addloadr" id="btn-loader">
    <div class="cir-loader">Loading..</div>
  </div>
  <span class="btn-text">
    <span>{{ settings.buyNowText }}</span>
    <span>{{ settings.sub-titile }}</span>
  </span>
  {% if settings.enableLogo %}
  <span class="pay-opt-icon">
      <img src="https://cdn.gokwik.co/v4/images/upi-icons.svg">
      <img src="https://cdn.gokwik.co/v4/images/right-arrow.svg">
  </span>
  {% endif %}
</button>
{% endif %}











