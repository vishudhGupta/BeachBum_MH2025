<script>
(() => {

  const btnSel = '#gokwik-buy-now';
  const sizeSel = 'input[name="globo-option-0"]';
  const errSel  = '.errorOptions[data-nameinput="globo-option-0"]';

  const sizeSelected = () => document.querySelector(sizeSel + ':checked');
  const toggleError = show =>
    document.querySelector(errSel)?.style.display = show ? 'block' : 'none';

  document.addEventListener('click', e => {
    const btn = e.target.closest(btnSel);
    if (!btn) return;

    if (!sizeSelected()) return toggleError(true);
    toggleError(false);
    onBuyNowClick(btn);
  });

  document.addEventListener('change', e => {
    if (e.target.matches(sizeSel)) toggleError(false);
  });

})();
</script>
{% if settings.goBuynowEnable %}           
<button type="button" class="button disabled" disabled onclick="onBuyNowClick(this)" id="gokwik-buy-now"{% if settings.hideFlow %} style="display:none !important;" {% endif %}>
  <div style="display:none" class="addloadr" id="btn-loader">
    <div class="cir-loader">Loading..</div>
  </div>
  <span class="btn-text">
    <span>{{ settings.buyNowText }}</span>
    <span>{{ settings.sub-titile }}</span>
  </span>
  {% if settings.enableLogo %}
  <span class="pay-opt-icon">
      <img src="https://cdn.gokwik.co/v4/images/upi-icons.svg">
      <img src="https://cdn.gokwik.co/v4/images/right-arrow.svg">
  </span>
  {% endif %}
</button>
{% endif %}











