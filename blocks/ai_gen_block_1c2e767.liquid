  }

  .ai-shop-look-product-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.popup_button_hover_color }};
  }

  .ai-shop-look-close-btn-{{ ai_gen_id }} {
    position: absolute;
    top: 8px;
    right: 8px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
    color: {{ block.settings.popup_text_color }};
    opacity: 0.7;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-shop-look-close-btn-{{ ai_gen_id }}:hover {
    opacity: 1;
    background-color: rgba(0, 0, 0, 0.1);
  }

  .ai-shop-look-empty-product-{{ ai_gen_id }} {
    text-align: center;
    padding: 20px;
    color: #999;
    font-style: italic;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
