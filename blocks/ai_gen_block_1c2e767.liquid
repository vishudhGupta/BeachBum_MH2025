      height: 60px;
    }
  }
{% endstyle %}

<shop-the-look-{{ ai_gen_id }}
  class="ai-shop-look-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-shop-look-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 1200 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-shop-look-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-shop-look-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-shop-look-empty-state-{{ ai_gen_id }}">
          Add an image to showcase your look
        </div>
      </div>
    {% endif %}

    {% for i in (1..5) %}
      {% liquid
        assign hotspot_enabled_key = 'hotspot_' | append: i | append: '_enabled'
        assign hotspot_x_key = 'hotspot_' | append: i | append: '_x'
        assign hotspot_y_key = 'hotspot_' | append: i | append: '_y'
        assign product_key = 'hotspot_' | append: i | append: '_product'

        assign hotspot_enabled = block.settings[hotspot_enabled_key]
        assign hotspot_x = block.settings[hotspot_x_key]
        assign hotspot_y = block.settings[hotspot_y_key]
        assign product = block.settings[product_key]
      %}

      {% if hotspot_enabled %}
        <div
          class="ai-shop-look-hotspot-{{ ai_gen_id }} ai-shop-look-hotspot-{{ ai_gen_id }}-{{ i }}"
          style="
            --ai-hotspot-x-{{ ai_gen_id }}: {{ hotspot_x }}%;
            --ai-hotspot-y-{{ ai_gen_id }}: {{ hotspot_y }}%;
          "
          data-hotspot-id="{{ i }}"
        >
          <button
            class="ai-shop-look-dot-{{ ai_gen_id }}"
            aria-label="View product details"
            aria-expanded="false"
          ></button>

          <div
            class="ai-shop-look-product-popup-{{ ai_gen_id }} ai-shop-look-product-popup-{{ ai_gen_id }}--{{ block.settings.popup_position }} ai-shop-look-product-popup-{{ ai_gen_id }}-{{ i }}"
          >
            <button
              class="ai-shop-look-close-btn-{{ ai_gen_id }}"
              aria-label="Close"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>

            {% if product != blank %}
              <div class="ai-shop-look-product-content-{{ ai_gen_id }}">
                <div class="ai-shop-look-product-image-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 160 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      width="160"
                      height="160"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="ai-shop-look-product-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
                <div class="ai-shop-look-product-info-{{ ai_gen_id }}">
                  <h3 class="ai-shop-look-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                  <div class="ai-shop-look-product-price-{{ ai_gen_id }}">{{ product.price | money }}</div>
                  <a
                    href="{{ product.url }}"
                    class="ai-shop-look-product-link-{{ ai_gen_id }}"
                  >
                    {{ block.settings.button_text }}
                  </a>
                </div>
              </div>
            {% else %}
              <div class="ai-shop-look-empty-product-{{ ai_gen_id }}">
                Select a product for this hotspot
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</shop-the-look-{{ ai_gen_id }}>

<script>
  (function() {
    class ShopTheLook{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.hotspots = this.querySelectorAll('.ai-shop-look-hotspot-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.hotspots.forEach((hotspot) => {
          const button = hotspot.querySelector('.ai-shop-look-dot-{{ ai_gen_id }}');
          const popup = hotspot.querySelector('.ai-shop-look-product-popup-{{ ai_gen_id }}');
          const closeButton = popup.querySelector('.ai-shop-look-close-btn-{{ ai_gen_id }}');

          button.addEventListener('click', () => {
            this.querySelectorAll('.ai-shop-look-product-popup-{{ ai_gen_id }}').forEach((p) => {
              if (p !== popup) {
                p.classList.remove('active');
                p.previousElementSibling.setAttribute('aria-expanded', 'false');
              }
            });

            const isActive = popup.classList.contains('active');
            popup.classList.toggle('active');
            button.setAttribute('aria-expanded', !isActive);
          });

          closeButton.addEventListener('click', (e) => {
            e.stopPropagation();
            popup.classList.remove('active');
            button.setAttribute('aria-expanded', 'false');
          });
        });

        document.addEventListener('click', (event) => {
          if (
            !event.target.closest('.ai-shop-look-product-popup-{{ ai_gen_id }}') &&
            !event.target.closest('.ai-shop-look-dot-{{ ai_gen_id }}')
          ) {
            this.querySelectorAll('.ai-shop-look-product-popup-{{ ai_gen_id }}').forEach((popup) => {
              popup.classList.remove('active');
              popup.previousElementSibling.setAttribute('aria-expanded', 'false');
            });
          }
        });
      }
    }

    customElements.define('shop-the-look-{{ ai_gen_id }}', ShopTheLook{{ ai_gen_id }});
  })();
</script>

