{% doc %}
  @prompt
    create a blog like setion with image on top then heading and few content nd a read more button with custom url  all the feield would be customization and should show 3 in a row
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-grid-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.section_background }};
  }

  .ai-blog-grid-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-blog-grid-heading-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-blog-grid-items-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .ai-blog-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-blog-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .ai-blog-card-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-blog-card-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-card-image-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-card-content-{{ ai_gen_id }} {
    padding: 24px;
  }

  .ai-blog-card-title-{{ ai_gen_id }} {
    margin: 0 0 12px;
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    line-height: 1.3;
  }

  .ai-blog-card-text-{{ ai_gen_id }} {
    margin: 0 0 20px;
    font-size: {{ block.settings.card_text_size }}px;
    color: {{ block.settings.card_text_color }};
    line-height: 1.6;
  }

  .ai-blog-card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    transition: background-color 0.3s ease;
  }

  .ai-blog-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  @media screen and (max-width: 989px) {
    .ai-blog-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-blog-grid-items-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-blog-grid-{{ ai_gen_id }} {
      padding: 30px 16px;
    }

    .ai-blog-grid-heading-{{ ai_gen_id }} {
      margin-bottom: 30px;
    }
  }
{% endstyle %}

<div class="ai-blog-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-grid-container-{{ ai_gen_id }}">
    {% if block.settings.section_heading != blank %}
      <h2 class="ai-blog-grid-heading-{{ ai_gen_id }}">{{ block.settings.section_heading }}</h2>
    {% endif %}

    <div class="ai-blog-grid-items-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign image_key = 'card_' | append: i | append: '_image'
          assign title_key = 'card_' | append: i | append: '_title'
          assign text_key = 'card_' | append: i | append: '_text'
          assign button_text_key = 'card_' | append: i | append: '_button_text'
          assign button_url_key = 'card_' | append: i | append: '_button_url'

          assign card_image = block.settings[image_key]
          assign card_title = block.settings[title_key]
          assign card_text = block.settings[text_key]
          assign card_button_text = block.settings[button_text_key]
          assign card_button_url = block.settings[button_url_key]
        %}

        <div class="ai-blog-card-{{ ai_gen_id }}">
          <div class="ai-blog-card-image-wrapper-{{ ai_gen_id }}">
            {% if card_image %}
              <img
                src="{{ card_image | image_url: width: 800 }}"
                alt="{{ card_image.alt | escape }}"
                loading="lazy"
                width="{{ card_image.width }}"
                height="{{ card_image.height }}"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>

          <div class="ai-blog-card-content-{{ ai_gen_id }}">
            {% if card_title != blank %}
              <h3 class="ai-blog-card-title-{{ ai_gen_id }}">{{ card_title }}</h3>
            {% endif %}

            {% if card_text != blank %}
              <div class="ai-blog-card-text-{{ ai_gen_id }}">{{ card_text }}</div>
            {% endif %}

            {% if card_button_text != blank %}
              <a
                href="{{ card_button_url }}"
                class="ai-blog-card-button-{{ ai_gen_id }}"
              >
                {{ card_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

